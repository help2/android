<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_marginLeft="@dimen/place_row_primary_margin_left"
        android:layout_marginRight="@dimen/place_row_primary_margin_right"
        android:layout_marginTop="@dimen/place_row_primary_margin_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="@string/place_item_distance" />

        <TextView
            android:id="@+id/name"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="@string/place_item_name" />

    </LinearLayout>

    <TextView
        android:id="@+id/list_address1"
        android:textStyle="bold"
        android:layout_marginLeft="@dimen/place_row_primary_margin_left"
        android:layout_marginRight="@dimen/place_row_primary_margin_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="@string/place_item_address1" />

    <TextView
        android:id="@+id/list_address2"
        android:textStyle="bold"
        android:layout_marginLeft="@dimen/place_row_primary_margin_left"
        android:layout_marginRight="30dp"
        android:autoLink="all"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="@string/place_item_address2" />

    <TextView
        android:id="@+id/list_helpers"
        android:textStyle="italic"
        android:layout_marginLeft="@dimen/place_row_secondary_margin_left"
        android:layout_marginRight="@dimen/place_row_secondary_margin_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="@string/place_item_helpers" />

    <TextView
        android:id="@+id/list_items"
        android:textStyle="bold"
        android:textColor="@color/place_row_list_items_text"
        android:layout_marginLeft="@dimen/place_row_secondary_margin_left"
        android:layout_marginRight="@dimen/place_row_secondary_margin_left"
        android:layout_width="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_height="wrap_content"
        tools:text="@string/place_item_items" />

</LinearLayout>
