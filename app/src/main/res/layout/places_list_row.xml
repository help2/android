<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:android.support.v7.cardview="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/places_list_margin"
    android.support.v7.cardview:cardUseCompatPadding="true"
    tools:context=".placeslist.PlacesListFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="?android:attr/listDivider"
        android:dividerPadding="@dimen/places_list_divider_padding"
        android:orientation="vertical"
        android:padding="@dimen/places_list_padding"
        android:showDividers="middle">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingBottom="@dimen/place_row_margin_bottom"
            android:paddingEnd="@dimen/place_row_primary_margin_right"
            android:paddingLeft="@dimen/place_row_primary_margin_left"
            android:paddingRight="@dimen/place_row_primary_margin_right"
            android:paddingStart="@dimen/place_row_primary_margin_left"
            android:paddingTop="@dimen/place_row_margin_top">

            <TextView
                android:id="@+id/distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/place_row_headline"
                tools:text="@string/place_item_distance" />

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/place_row_headline"
                android:textStyle="bold"
                tools:text="@string/place_item_name" />

        </LinearLayout>

        <TextView
            android:id="@+id/list_address1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:paddingBottom="@dimen/place_row_margin_bottom"
            android:paddingEnd="@dimen/place_row_primary_margin_right"
            android:paddingLeft="@dimen/place_row_primary_margin_left"
            android:paddingRight="@dimen/place_row_primary_margin_right"
            android:paddingStart="@dimen/place_row_primary_margin_left"
            android:paddingTop="@dimen/place_row_margin_top"
            android:textStyle="bold"
            tools:text="@string/place_item_address1" />

        <TextView
            android:id="@+id/list_address2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autoLink="all"
            android:background="?attr/selectableItemBackground"
            android:paddingBottom="@dimen/place_row_margin_bottom"
            android:paddingEnd="30dp"
            android:paddingLeft="@dimen/place_row_primary_margin_left"
            android:paddingRight="30dp"
            android:paddingStart="@dimen/place_row_primary_margin_left"
            android:paddingTop="@dimen/place_row_margin_top"
            android:textStyle="bold"
            tools:text="@string/place_item_address2" />

        <TextView
            android:id="@+id/list_helpers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/place_row_margin_bottom"
            android:paddingEnd="@dimen/place_row_secondary_margin_right"
            android:paddingLeft="@dimen/place_row_secondary_margin_left"
            android:paddingRight="@dimen/place_row_secondary_margin_right"
            android:paddingStart="@dimen/place_row_secondary_margin_left"
            android:paddingTop="@dimen/place_row_margin_top"
            android:textStyle="italic"
            tools:text="@string/place_item_helpers" />

        <TextView
            android:id="@+id/list_items"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/place_row_margin_bottom"
            android:paddingEnd="@dimen/place_row_secondary_margin_right"
            android:paddingLeft="@dimen/place_row_secondary_margin_left"
            android:paddingRight="@dimen/place_row_secondary_margin_right"
            android:paddingStart="@dimen/place_row_secondary_margin_left"
            android:paddingTop="@dimen/place_row_margin_top"
            android:textColor="@color/place_row_list_items_text"
            android:textStyle="bold"
            tools:text="@string/place_item_items" />

    </LinearLayout>

</android.support.v7.widget.CardView>
